<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5pt"
        android:layout_weight="1">

        <TextView
            android:id="@+id/studyAText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="20sp"
            android:text="@string/studyText"
            android:textAlignment="viewStart"
            android:textColor="@color/yellow"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/studyASwitch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20pt"
        android:layout_weight="1">

        <Spinner
            android:id="@+id/studySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="60sp"
            android:entries="@array/timeBeforeClass"></Spinner>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5pt">

        <TextView
            android:id="@+id/testAText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="20sp"
            android:text="@string/testText"
            android:textAlignment="viewStart"
            android:textColor="@color/red"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/testASwitch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20pt">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60sp"
            android:id="@+id/testSpinner"
            android:entries="@array/timeBeforeTest"
            android:layout_gravity="center"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5pt">

        <TextView
            android:id="@+id/sleepAwakeAText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="20sp"
            android:text="@string/wake_sleepTex"
            android:textAlignment="viewStart"
            android:textColor="@color/blue"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/sleepWakeASwitch"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2pt">

        <TextView
            android:id="@+id/wakeTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="60sp"
            android:text="@string/sleepTText"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/wakeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/sleepSelectText"
            android:paddingStart="20sp"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sleepTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="60sp"
            android:text="@string/wakeTText"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/sleepTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/wakeSelectText"
            android:paddingStart="20sp"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

</LinearLayout>